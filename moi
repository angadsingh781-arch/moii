<!-- LOCK SCREEN -->
<section class="screen" id="lockScreen">
  <div class="card">
    <h1>Enter the code</h1>
    <p class="sub">
      Our first date.<br>
      Format: <b>DD.MM.YY</b>
    </p>
    <input id="codeInput" placeholder="DD.MM.YY" />
    <button class="btn" id="unlockBtn">Unlock</button>
    <div class="error" id="errorText">Wrong.</div>
  </div>
</section>

<!-- VALENTINE SCREEN -->
<section class="screen hidden" id="valScreen">
  <div class="card">
    <h1>Moi, will you be my Valentine <span class="heart">üíò</span></h1>

    <div class="stage" id="stage">
      <button class="vbtn yes" id="yesBtn">Yes üòå</button>
      <button class="vbtn no" id="noBtn">No üôÉ</button>
    </div>

    <div class="success" id="success">
      <h2>YES üò≥üíñ</h2>
      <p>Now you‚Äôre stuck with me. üòè</p>
    </div>
  </div>
</section>

<script>
  const SECRET_CODE = "16.01.26";

  const lockScreen = document.getElementById("lockScreen");
  const valScreen = document.getElementById("valScreen");
  const codeInput = document.getElementById("codeInput");
  const unlockBtn = document.getElementById("unlockBtn");
  const errorText = document.getElementById("errorText");

  function unlock(){
    if(codeInput.value.trim() === SECRET_CODE){
      errorText.style.display="none";
      lockScreen.classList.add("hidden");
      valScreen.classList.remove("hidden");
      placeNo();
    } else {
      errorText.style.display="block";
    }
  }

  unlockBtn.onclick = unlock;
  codeInput.onkeydown = e => { if(e.key==="Enter") unlock(); };

  const stage = document.getElementById("stage");
  const noBtn = document.getElementById("noBtn");
  const yesBtn = document.getElementById("yesBtn");
  const success = document.getElementById("success");

  function placeNo(){
    const r = stage.getBoundingClientRect();
    noBtn.style.left = (r.width*0.6)+"px";
    noBtn.style.top = (r.height*0.6)+"px";
    noBtn.style.transform="none";
  }

  function moveNo(){
    const r = stage.getBoundingClientRect();
    noBtn.style.left = Math.random()*(r.width-80)+"px";
    noBtn.style.top = Math.random()*(r.height-80)+"px";
  }

  noBtn.onmouseenter = moveNo;
  noBtn.onclick = moveNo;

  yesBtn.onclick = ()=>{
    success.style.display="block";
    yesBtn.disabled=true;
    noBtn.disabled=true;
    for(let i=0;i<14;i++){
      const h=document.createElement("div");
      h.className="float";
      h.textContent="üíñ";
      h.style.left=Math.random()*100+"vw";
      document.body.appendChild(h);
      setTimeout(()=>h.remove(),2500);
    }
  };
</script>

